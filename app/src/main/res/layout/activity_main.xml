<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>-->
    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_home"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_shouye"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center"
            android:textSize="10sp"
            android:text="首页"
            android:textColor="@drawable/color_radiobutton"
        />

        <RadioButton
            android:id="@+id/rb_home_xiaoxi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center"
            android:text="消息"
            android:textSize="10sp"
            android:textColor="@drawable/color_radiobutton"
        />


        <RadioButton
            android:id="@+id/rb_home_tianjia"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:drawable="@drawable/ic_launcher"
            android:gravity="center_vertical"
        />

        <RadioButton
            android:id="@+id/rb_home_faxian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center"
            android:text="发现"
            android:textSize="10sp"
            android:textColor="@drawable/color_radiobutton"
        />

        <RadioButton
            android:id="@+id/rb_home_wode"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/color_radiobutton"
        />
    </RadioGroup>
</LinearLayout>
